{
    "name": "maniaxatwork/contao-jobs-bundle",
    "description": "Adds job functionality to Contao",
    "keywords": [
        "contao",
        "bundle",
        "jobs",
        "employment"
    ],
    "type": "contao-bundle",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Stephan Buder",
            "email": "stephan@maniax-at-work.de",
            "homepage": "https://www.maniax-at-work.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://www.maniax-at-work.de",
    "support": {
        "issues": "https://github.com/maniaxatwork/contao-jobs-bundle/issues",
        "source": "https://github.com/maniaxatwork/contao-jobs-bundle"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^4.9",
        "friendsofsymfony/http-cache": "^2.4",
        "symfony/config": "^5.4",
        "symfony/dependency-injection": "^5.4",
        "symfony/deprecation-contracts": "^2.1 || ^3.0",
        "symfony/http-foundation": "^5.4",
        "symfony/http-kernel": "^5.4",
        "symfony/polyfill-mbstring": "^1.0",
        "symfony/yaml": "^5.4"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.3.1",
        "contao/test-case": "^4.5",
        "phpunit/phpunit": "^9.3",
        "symfony/http-client": "5.4.*",
        "symfony/phpunit-bridge": "^5.4",
        "contao/easy-coding-standard": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ManiaxAtWork\\ContaoJobsBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config",
            "src/Resources/contao/dca",
            "src/Resources/contao/languages",
            "src/Resources/contao/templates"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ManiaxAtWork\\ContaoJobsBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true
        }
    },
    "extra": {
        "contao-manager-plugin": "ManiaxAtWork\\ContaoJobsBundle\\ContaoManager\\Plugin"
    }
}
